{
    "name": "spiral/sendit",
    "type": "library",
    "description": "Email builder and queue handler",
    "license": "MIT",
    "homepage": "https://spiral.dev",
    "support": {
        "issues": "https://github.com/spiral/framework/issues",
        "source": "https://github.com/spiral/sendit"
    },
    "authors": [
        {
            "name": "Anton Titov (wolfy-j)",
            "email": "wolfy-j@spiralscout.com"
        },
        {
            "name": "Pavel Butchnev (butschster)",
            "email": "pavel.buchnev@spiralscout.com"
        },
        {
            "name": "Aleksei Gagarin (roxblnfk)",
            "email": "alexey.gagarin@spiralscout.com"
        },
        {
            "name": "Maksim Smakouz (msmakouz)",
            "email": "maksim.smakouz@spiralscout.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "spiral/core": "^3.11.1",
        "spiral/queue": "^3.11.1",
        "spiral/logger": "^3.11.1",
        "spiral/mailer": "^3.11.1",
        "spiral/views": "^3.11.1",
        "symfony/mailer": "^5.1 || ^6.0 || ^7.0",
        "psr/event-dispatcher": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "mockery/mockery": "^1.5",
        "spiral/boot": "^3.11.1",
        "spiral/stempler-bridge": "^3.11.1",
        "vimeo/psalm": "^5.9"
    },
    "autoload": {
        "psr-4": {
            "Spiral\\SendIt\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spiral\\Tests\\SendIt\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.12.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
