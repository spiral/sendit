{
    "name": "spiral/sendit",
    "type": "library",
    "description": "Email builder and queue handler",
    "license": "MIT",
    "homepage": "https://spiral.dev",
    "support": {
        "issues": "https://github.com/spiral/framework/issues",
        "source": "https://github.com/spiral/sendit"
    },
    "authors": [
        {
            "name": "Anton Titov (wolfy-j)",
            "email": "wolfy-j@spiralscout.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "spiral/logger": "^2.7",
        "spiral/mailer": "^2.7",
        "symfony/mailer": "^5.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5|^9.0",
        "mockery/mockery": "^1.4",
        "spiral/jobs": "^2.2",
        "spiral/views": "^2.7",
        "spiral/stempler-bridge": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Spiral\\SendIt\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spiral\\Tests\\SendIt\\": "tests"
        }
    },

    "extra": {
        "branch-alias": {
            "dev-master": "2.7.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
